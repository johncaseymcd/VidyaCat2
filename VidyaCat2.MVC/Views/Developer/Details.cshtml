@model VidyaCat2.Models.DeveloperDetail

@{
    ViewBag.Title = "Developer - Info";
}

<h2 class="pageHeader">Developer Info</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DeveloperName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeveloperName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Region)
        </dt>

        <dd>
            @Html.ActionLink($"{Model.RegionName}", "IndexByRegion", "Developer", new { region = Model.Region }, htmlAttributes: new { @class = "indexLink" })
