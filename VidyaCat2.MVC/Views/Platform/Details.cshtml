@model VidyaCat2.Models.PlatformDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PlatformDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.ActionLink($"{Model.Brand}", "IndexByBrand", "Platform", new { brand = Model.Brand }, htmlAttributes: new { @class = "indexLink" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PlatformName)
        </dt>

        <dd>
            @Html.ActionLink($"{Model.PlatformName}", "Details", "Platform", new { id = Model.PlatformID }, htmlAttributes: new { @class = "indexLink" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.ActionLink($"{Model.ReleaseDate.ToShortDateString()}", "IndexByYear", "Platform", new { year = Model.ReleaseDate.Year }, htmlAttributes: new { @class = "indexLink" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        
        <dd>
            @Html.ActionLink($"{Model.Status}", "IndexByStatus", "Platform", new { status = Model.IsCurrent }, htmlAttributes: new { @class = "indexLink" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GamesOnPlatform)
        </dt>

        <dd>
            @Html.ActionLink($"{Model.GamesOnPlatform}", "IndexByPlatform", "Game", new { id = Model.PlatformID }, htmlAttributes: new { @class = "indexLink" })
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlatformID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
